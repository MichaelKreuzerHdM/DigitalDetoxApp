<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_wood"
    tools:context=".HomeActivity">

    <ImageView
        android:layout_width="392dp"
        android:layout_height="221dp"
        android:id="@+id/imageView2"
        android:layout_gravity="center_horizontal|top"
        android:src="@drawable/activitycircleworkexport"
        android:layout_marginTop="30dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="SET WORKPLACE"
        android:id="@+id/button"
        android:layout_gravity="center"
        android:layout_marginTop="-15dp"
        android:color="#c5ffffff"
        android:backgroundTint="#3fffffff"
        android:alpha="1"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:visibility="visible" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="STATISTICS &amp; PROGRESS"
        android:id="@+id/button2"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:color="#c5ffffff"
        android:backgroundTint="#3fffffff"
        android:alpha="1"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:visibility="visible"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="BLOCKED APPS"
        android:id="@+id/button3"
        android:layout_gravity="center"
        android:layout_marginTop="75dp"
        android:color="#c5ffffff"
        android:backgroundTint="#3fffffff"
        android:alpha="1"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:visibility="visible"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="EXIT"
        android:id="@+id/button4"
        android:layout_gravity="center"
        android:layout_marginTop="210dp"
        android:color="#c5ffffff"
        android:backgroundTint="#3fffffff"
        android:alpha="1"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:visibility="visible"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="BLOCKED CALLERS"
        android:id="@+id/button5"
        android:layout_gravity="center"
        android:color="#c5ffffff"
        android:backgroundTint="#3fffffff"
        android:alpha="1"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:layout_marginTop="120dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:text="PIGGY BANK"
        android:id="@+id/button7"
        android:layout_gravity="center"
        android:color="#c5ffffff"
        android:backgroundTint="#3fffffff"
        android:alpha="1"
        android:clickable="true"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:layout_marginTop="165dp" />

</FrameLayout>